<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_border_gray">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/statusCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:visibility="visible"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="6dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/app_bar"
            android:background="@color/white"
            android:id="@+id/relativeLayout68" >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edstatus"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/gray_900"
                android:inputType="text"
                android:hint="Write here.."
                android:focusable="false"
                android:cursorVisible="false"
                android:background="@drawable/post_card"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="16dp"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:text="What is happenig?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/textView14"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:layout_marginBottom="6dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative"
            android:background="@color/white"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="1dp"
                android:id="@+id/llaudio"
                android:visibility="visible"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="16dp"
                    android:id="@+id/relate">


                    <view
                        class="com.pkmmte.view.CircularImageView"
                        app:border="false"
                        app:border_color="@color/transparent"
                        app:shadow="false"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/ppicture"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:padding="0dp"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/options"
                        app:srcCompat="@drawable/abc_ic_menu_overflow_material"
                        android:tint="#9B9B9B"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/ppicture">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtText"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:text="Habitat Valley"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginRight="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtaction"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-light"
                            android:textSize="12dp"
                            android:text="reported an accided"
                            android:textColorLink="@color/base_blue_darker"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/txtText" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentRight="false"
                            android:layout_marginRight="5dp"
                            android:id="@+id/time"
                            android:layout_below="@+id/txtaction">


                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="1dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="2 min ago"
                                    android:id="@+id/txttime"
                                    android:textColor="@color/gray_500"
                                    android:fontFamily="sans-serif-light"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txttitle"
                    android:textColor="@color/post_text_color"
                    android:layout_marginRight="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Accident on N1"
                    android:layout_marginLeft="16dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="view less"
                    android:id="@+id/viewLess"
                    android:fontFamily="sans-serif"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp"
                    android:textColor="@color/base_blue"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtmaintext"
                    android:textColor="@color/post_text_color"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Incident hererhbhbgsjngngjnkdjnkgjfjns,mnkgjnjngjsnjng nsbdhjfgnjdfng shdfjgjkdngsdjngjkn "
                    android:textSize="14sp"
                    android:autoLink="web"
                    android:textColorLink="@color/base_blue"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:layout_marginRight="16dp"
                    android:maxLines="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="...view more"
                    android:id="@+id/readmore"
                    android:fontFamily="sans-serif"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp"
                    android:textColor="@color/base_blue"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" />


                <HorizontalScrollView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/multiplePhotosScrol"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/multiphotoslayout" />

                </HorizontalScrollView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_stream_photo"
                    android:visibility="visible"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>